<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000"
        android:fontFamily="sans-serif-condensed"
        android:text="Calculator"
        android:textSize="24sp"
        android:textColor="#FFF"/>

    <EditText
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#AAA"
        android:text="0"
        android:gravity="right|center"
        android:textSize="90sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ce"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:text="CE"
            android:textSize="30sp" />

        <Button
            android:id="@+id/c"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:text="C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bs"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:text="BS"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/div"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:text="/"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:background="#FFF"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:background="#FFF"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:background="#FFF"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:text="*"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:background="#FFF"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:background="#FFF"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:background="#FFF"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:text="-"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:background="#FFF"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:background="#FFF"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:background="#FFF"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:text="+"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/change"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:text="+/-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:background="#FFF"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/enter"
            android:layout_width="102sp"
            android:layout_height="96sp"
            android:text="="
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>
